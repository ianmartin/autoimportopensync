dnl Process this file with autoconf to produce a configure script.

AC_INIT(acinclude.m4)
AM_INIT_AUTOMAKE(kdepim_sync, 0.82)
AM_CONFIG_HEADER(config.h)

dnl pkg_modules=""
dnl PKG_CHECK_MODULES(PACKAGE, [$pkg_modules])
AC_SUBST(PACKAGE_CFLAGS)
AC_SUBST(PACKAGE_LIBS)

AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC
AC_LIBTOOL_DLOPEN
AC_PROG_LIBTOOL

dnl KDE
AC_PATH_KDE
KDE_PROG_LIBTOOL
KDE_USE_QT(3)

dnl Add the languages which your application supports here.
dnl ALL_LINGUAS=""
dnl AM_GNU_GETTEXT

CPPFLAGS="${PACKAGE_CFLAGS}"
LIBS="$all_libraries $LIBS"

OPENSYNC_CONFIGDIR=${datadir}/opensync
AC_SUBST(OPENSYNC_CONFIGDIR)

OPENSYNC_LIBDIR=${libdir}/opensync
AC_SUBST(OPENSYNC_LIBDIR)

AC_OUTPUT([
Makefile
src/Makefile
])

